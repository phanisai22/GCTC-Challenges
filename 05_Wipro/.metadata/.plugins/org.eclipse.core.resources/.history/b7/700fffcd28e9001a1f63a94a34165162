package com.ExeptionHandling;

public class MathOperations {

    public static void main(String[] args) {
        if (args.length != 5) {
            System.out.println("Enter 5 number only.");
            return;
        }

        int sum = 0;

        for (int i = 0; i < 5; i++) {
            sum += Integer.parseInt(args[i]);
        }

        System.out.println("Average : " + (sum / 5));
    }
}
